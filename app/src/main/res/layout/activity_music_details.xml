<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    android:background="#F7BDBDBD"
    tools:context=".Music_Details">


        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8"
            android:padding="12sp"
            >

            <ImageView
                android:id="@+id/img_btn_drawer"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@drawable/listicon"
                android:layout_margin="7sp"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="0sp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_weight="3"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@drawable/pureplaylogo"
                />
            <ImageView
                android:layout_width="0sp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@drawable/user"
                android:layout_margin="7sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="7"
            >

            <androidx.cardview.widget.CardView
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="55dp"
                app:cardCornerRadius="22sp"
                >

                <ImageView
                    android:id="@+id/cardViewMusic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_weight="2"
                android:id="@+id/tv_currentSongMusic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Song Name"
                android:textColor="#818080"
                android:textAlignment="center"
                android:textSize="26sp"
                android:textFontWeight="500"
                android:fontFamily="cursive"
                android:clickable="true"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F7BDBDBD"
            >

            <SeekBar
                android:id="@+id/seekbar"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:thumbTint="@color/black"
                android:progressTint="@color/black"
                android:scaleY="1.3"
                android:paddingTop="15dp"
                android:layout_marginHorizontal="30dp"
                android:progressBackgroundTint="#FFFFFF"

                />

            <TextView
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Song Time"
                android:textColor="#818080"
                android:textAlignment="textEnd"
                android:layout_marginRight="30dp"
                android:textSize="16sp"
                android:textFontWeight="800"
                android:fontFamily="cursive"
                android:clickable="true"
                 />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_marginBottom="22dp"
            android:background="#F7BDBDBD"

            >

            <ImageView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                />
            <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rewindbutton"
                android:layout_margin="5dp"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_play"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/play"
                android:clickable="true"
                />
            <ImageView
                android:id="@+id/btn_next"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/forwardbutton"
                android:layout_margin="7dp"
                android:clickable="true"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

</LinearLayout>